
   <% if(data != null ){ %>
    <div class="overflow-hidden bg-white py-24 sm:py-32">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2">
          <div class="lg:pr-8 lg:pt-4">
            <div class="lg:max-w-lg">
              <p class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"><%- data.name %></p>
              <h2 class="text-base font-semibold leading-7 text-indigo-600"><%- data.category %></h2>
              <p class="mt-6 text-lg leading-8 text-gray-600"><%- data.description  %></p>
              <ul class="">
               <% data.ingredients.forEach(function(ingredients, index){ %>
                <li><%= ingredients %></li>
              <%  }) %>
              </ul>
            </div>
          </div>
          <img src="/uploads/<%- data.image %>" alt="Product screenshot" class="w-[48rem] max-w-none rounded-xl shadow-xl ring-1 ring-gray-400/10 sm:w-[57rem] md:-ml-4 lg:-ml-0" width="2432" height="1442">
        </div>
      </div>
    </div>      
   <%  } else {%>
    <h1>error</h1>
    <% } %>
 