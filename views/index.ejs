        <div>
          <img src="/uploads/<%-recipe.image%>"/>
          
          <%- recipe.name %>
        </div>
      </div>
    </a>
      <% }) %>
      <% } %>
    </div>

    
    <div>
      <h1>chinese</h1>
      <% if(food != '') { %>
        <% food.chinese.forEach(function(recipe, index) {%>
